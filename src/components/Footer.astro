<script>
    document.addEventListener('DOMContentLoaded', () => {
        const yapeIcon = document.getElementById('yape-icon');
        const plinIcon = document.getElementById('plin-icon');
        const qrModal = document.getElementById('qr-modal');
        const qrCode = document.getElementById('qr-code') as HTMLImageElement;
        const closeModalButton = document.getElementById('close-modal');

        // Cambia estas URLs a las rutas de tus códigos QR
        const qrYape = '/images/yape-prueba.PNG';
        const qrPlin = '/images/plin-prueba.PNG';

        yapeIcon.addEventListener('click', () => {
            qrCode.src = qrYape;
            qrModal.classList.remove('hidden');
            qrModal.classList.add('flex'); // Agrega la clase 'flex' al abrir el modal
        });

        plinIcon.addEventListener('click', () => {
            qrCode.src = qrPlin;
            qrModal.classList.remove('hidden');
            qrModal.classList.add('flex'); // Agrega la clase 'flex' al abrir el modal
        });

        closeModalButton.addEventListener('click', () => {
            qrModal.classList.add('hidden');
            qrModal.classList.remove('flex'); // Asegúrate de quitar la clase 'flex' al cerrar
        });

        // Cerrar el modal al hacer clic fuera del contenido
        qrModal.addEventListener('click', (event) => {
            if (event.target === qrModal) {
                qrModal.classList.add('hidden');
                qrModal.classList.remove('flex'); // Asegúrate de quitar la clase 'flex' al cerrar
            }
        });
    });
</script>